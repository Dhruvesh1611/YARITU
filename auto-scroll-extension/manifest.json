{
  "manifest_version": 3,
  "name": "YouTube Shorts Smart Scroller",
  "version": "1.0",
  "description": "Auto-scrolls YouTube Shorts after each video.",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}