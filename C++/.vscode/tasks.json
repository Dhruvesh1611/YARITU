{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C++",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile C++ code"
        },
        {
            "label": "run C++",
            "type": "shell",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "group": "build",
            "dependsOn": "build C++",
            "problemMatcher": []
        }
    ]
}
