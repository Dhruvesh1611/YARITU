{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C++: build and run current file",
        "type": "shell",
        "command": "/bin/bash",
        "args": [
          "-c",
          "g++ -std=c++11 \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" && \"${fileDirname}/${fileBasenameNoExtension}\""
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"]
      }
    ]
  }
  